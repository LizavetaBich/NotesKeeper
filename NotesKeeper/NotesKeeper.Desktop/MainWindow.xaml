<Window x:Class="NotesKeeper.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotesKeeper.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="800" MinWidth="1000">
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <ListBox Grid.Row="0" Grid.Column="0">
            <ListBoxItem>Default</ListBoxItem>
            <ListBoxItem>Favourites</ListBoxItem>
        </ListBox>
        
        <WrapPanel Grid.Column="1" Grid.RowSpan="2" Grid.Row="0">
            <local:NoteViewWidget Width="350" Height="240" Margin="10"></local:NoteViewWidget>
        </WrapPanel>
        
    </Grid>
</Window>
