<Window x:Class="NotesKeeper.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotesKeeper.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="800" MinWidth="1000">
    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Canvas Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="CornflowerBlue">
            
        </Canvas>
        
        <ListBox Grid.Row="1" Grid.Column="0">
            <TextBlock FontWeight="Bold">Groups</TextBlock>
            <ListBoxItem>Default</ListBoxItem>
            <ListBoxItem>Favourites</ListBoxItem>
        </ListBox>
        
        <WrapPanel Grid.Column="1" Grid.Row="1">
            <local:EventViewWidget Width="350" Height="260" Margin="10"></local:EventViewWidget>
        </WrapPanel>
        
    </Grid>
</Window>
